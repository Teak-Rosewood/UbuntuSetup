<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="gps">
    
    <link name="gps_link"/>

    <joint name="gps_to_payload" type="fixed">
        <parent link="payload_link"/>
        <child link="gps_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <gazebo reference="gps_link">
        <sensor name="my_gps" type="gps">
            <always_on>true</always_on>
            <update_rate>1</update_rate>
            <plugin name="gps_plugin" filename="libgazebo_ros_gps_sensor.so">
                <ros>
                    <namespace>/gps</namespace>
                    <remapping>~/out:=data</remapping>
                </ros>
            </plugin>
        </sensor>
    </gazebo>

    <gazebo>
        <plugin filename="libignition-gazebo-gps-system" name="ignition::gazebo::systems::gps"/>
    </gazebo>

</robot>
